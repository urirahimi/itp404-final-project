<form id="createForm" onsubmit={{action 'createTodo'}}>

    <div>
        <label>
            Due date:
            {{pikaday-input onSelection=(action 'doSomething') type="text" id="dueDate" value=dueDate
            format="MM/DD/YYYY"}}
        </label>

        <span id="dueDateError" for="dueDateError"></span>

    </div>
    <div>
        <label for="subject">Title</label>
        {{input type="text" data-test="subject" id="subject" value=subject}}
        <span id="subjectError" for="subjectError"></span>
    </div>
    <div>
        <label for="message">Todo Details</label>
        {{textarea rows="8" data-test="message" id="message" cols="80" value=message}}
        <span id="messageError" for="messageError"></span>
    </div>
    <button data-test="send" id="send" type="submit">Save Todo</button>
</form>